<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:mixinTypes="[granite:InternalArea]"
          jcr:primaryType="nt:unstructured"
          jcr:title="Edit Component"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="core.forms.components.formsportal.draftandsubmissions.v1.editor"
          width="46rem">
    <content
            granite:class="fpDialog"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <generalConfiguration
                            jcr:primaryType="nt:unstructured"
                            jcr:title="General"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <displayOptions
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    emptyText=""
                                    fieldLabel="Select Tabs"
                                    multiple="{Boolean}false"
                                    name="./displayOptions"
                                    text="Select">
                                <items jcr:primaryType="nt:unstructured">
                                    <draftOnly
                                            jcr:primaryType="nt:unstructured"
                                            text="Draft Forms"
                                            value="draftOnly"/>
                                    <submitOnly
                                            jcr:primaryType="nt:unstructured"
                                            text="Submitted Forms"
                                            value="submittedOnly"/>
                                    <pendingSignOnly
                                            jcr:primaryType="nt:unstructured"
                                            text="Pending Sign Forms"
                                            value="pendingSignOnly"/>
                                </items>
                            </displayOptions>
                            <defaultTab
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    emptyText=""
                                    fieldDescription="Select the default tab"
                                    fieldLabel="Default Tab"
                                    name="./defaultTab">
                                <items jcr:primaryType="nt:unstructured">
                                    <empty
                                            jcr:primaryType="nt:unstructured"
                                            text=""
                                            value=""/>
                                    <draft
                                            jcr:primaryType="nt:unstructured"
                                            text="Draft Forms"
                                            value="draftTab"/>
                                    <submit
                                            jcr:primaryType="nt:unstructured"
                                            text="Submitted Forms"
                                            value="submittedGuideTab"/>
                                    <pendingSign
                                            jcr:primaryType="nt:unstructured"
                                            text="Pending Sign Forms"
                                            value="pendingSignGuideTab"/>
                                </items>
                            </defaultTab>
                            <totalResult
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValue="5"
                                    emptyText="5"
                                    fieldDescription="Specify the number of drafts and submissions to display"
                                    fieldLabel="Results Displayed"
                                    maxLength="{Long}30"
                                    name="./totalResult"/>
                        </items>
                    </generalConfiguration>
                    <tabTitles
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Tab titles"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <draftTitleText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="Draft Forms"
                                    fieldDescription="Specify a custom title for the Draft Forms tab"
                                    fieldLabel="Draft Forms Tab titles"
                                    name="./draftTitleText"/>
                            <submittedTitleText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="Submitted Forms"
                                    fieldDescription="Specify a custom title for the Submitted Forms tab"
                                    fieldLabel="Submitted Forms Tab titles"
                                    name="./submittedTitleText"/>
                            <pendingSignTitleText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    emptyText="Pending Sign Forms"
                                    fieldDescription="Specify a custom title for the Pending Sign Forms tab"
                                    fieldLabel="Pending Sign Forms Tab titles"
                                    name="./pendingSignTitleText"/>
                        </items>
                    </tabTitles>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
